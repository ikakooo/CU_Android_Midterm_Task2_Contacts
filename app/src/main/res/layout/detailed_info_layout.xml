<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutTopID"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:background="#7C7C7C"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/InfoTextViewID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/RightImageViewID"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_marginTop="660dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTopID" />

    <TextView
        android:id="@+id/InfoTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:maxLength="34"
        android:maxLines="1"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/RightImageViewID"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTopID"
        tools:text="i_chkhitunidze@cu.edu.gekjhsfdfkjhsdfjsdhfkjsfhj" />

    <TextView
        android:id="@+id/typeTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/RightImageViewID"
        app:layout_constraintTop_toBottomOf="@+id/InfoTextViewID"
        tools:text="Work" />

    <ImageView
        android:id="@+id/leftImageViewID"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_marginTop="656dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTopID" />

    <LinearLayout
        android:id="@+id/linearLayoutBottomID"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#7C7C7C"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeTextViewID" />
</androidx.constraintlayout.widget.ConstraintLayout>